<!DOCTYPE html>
<html>

<head>

    <%- include ('./partials/css.ejs') %>
</head>

<body>
    <div id="app">
        <v-app>
            <v-app-bar app color="blue"></v-app-bar>
            <v-navigation-drawer absolute app>
                <v-toolbar color="primary">
                    <v-toolbar-title>
                        Admin App
                        {{selectedPage}}
                    </v-toolbar-title>

                </v-toolbar>
                
                <v-list dense v-model="selectedPage">
                    <v-list-item-group color="primary">
                        <v-list-item v-on:click="" link  exact>
                            <v-list-item-icon>
                                <v-icon v-text="'mdi-home'"></v-icon>
                            </v-list-item-icon>
                            <v-list-item-content>
                                <v-list-item-title v-text="'Dashboard'"></v-list-item-title>
                            </v-list-item-content>
                        </v-list-item>
                      <v-list-item link  href="/medicine">
                            <v-list-item-icon>
                                <v-icon v-text="'mdi-pharmacy'"></v-icon>
                            </v-list-item-icon>
                            <v-list-item-content>
                                <v-list-item-title v-text="'Medicine'"></v-list-item-title>
                            </v-list-item-content>
                        </v-list-item>
                        <v-list-item link exact href="/category">
                            <v-list-item-icon>
                                <v-icon v-text="'mdi-shape'"></v-icon>
                            </v-list-item-icon>
                            <v-list-item-content>
                                <v-list-item-title v-text="'Category'"></v-list-item-title>
                            </v-list-item-content>
                        </v-list-item>
                        <v-list-item link exact href="/tag" >
                            <v-list-item-icon>
                                <v-icon v-text="'mdi-tag'"></v-icon>
                            </v-list-item-icon>
                            <v-list-item-content>
                                <v-list-item-title v-text="'Tag'"></v-list-item-title>
                            </v-list-item-content>
                        </v-list-item>
                    </v-list-item-group>
                </v-list>
            </v-navigation-drawer>
            <v-main>
                <v-container v-if="selectedPage==''">

                </v-container>
            </v-main>
        </v-app>
    </div>
    <%- include ('./partials/js.ejs') %>
        <script>
            new Vue({
                el: '#app',
                data: {
                    selectedPage: ""
                },
                methods: {
                    changePage(page){
                        console.log(page);
                        this.selectedPage = page;
                    }
                },
                vuetify: new Vuetify(),
            })
        </script>
</body>

</html>